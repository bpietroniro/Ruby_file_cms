<ul>
  <% @files.each do |file| %>
    <li>
      <a href="/<%= file %>"><%= file %></a>
      <div>
        <form class="inline" action="/<%= file %>/edit" method="get">
          <button type="submit">Edit</button>
        </form>
        <form class="inline" action="/<%= file %>/delete" method="post">
          <button name="filename" value=<%= file %> type="submit">Delete</button>
        </form>
        <form class="inline" action="/duplicate" method="post">
          <button name="filename" value=<%= file %> type="submit">Duplicate</button>
        </form>
      </div>
    </li>
  <% end %>
</ul>

<a href="/new">New Document</a>

<% if session[:username] %>
  <form method="post" action="/users/signout">
    <p class="user-status">
      Signed in as <%= session[:username] %>
      <button type="submit">Sign Out</button>
    </p>
<% else %>
  <p class="user-status"><a href="/users/signin">Sign In</a></p>
<% end %>

